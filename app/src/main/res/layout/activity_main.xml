<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/b1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/kalan"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginBottom="13dp"
        android:text="Kalan Süre:"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/skor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    <TextView
        android:id="@+id/skor"
        android:layout_width="121dp"
        android:layout_height="36dp"
        android:layout_marginBottom="79dp"
        android:text="Skor:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kalan" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="359dp"
        android:layout_height="138dp"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="237dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/kalan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/g1"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:onClick="catchAgent"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/pngwing_com" />

        <ImageView
            android:id="@+id/g2"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:onClick="catchAgent"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/pngwing_com" />

        <ImageView
            android:id="@+id/g3"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:onClick="catchAgent"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/pngwing_com" />

        <ImageView
            android:id="@+id/g4"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:onClick="catchAgent"
            app:layout_column="3"
            app:layout_row="3"
            app:srcCompat="@drawable/pngwing_com" />


    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/baslaBt"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="40dp"
        android:onClick="baslaOyun"
        android:text=" Yeniden Başla"
        android:textAlignment="center"
        android:textColor="#460151"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>